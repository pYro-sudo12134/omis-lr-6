<?xml version="1.0" encoding="UTF-8"?>
<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="http://ehcache.org/ehcache.xsd"
         updateCheck="false"
         monitoring="autodetect"
         dynamicConfig="true">

    <diskStore path="D:/Java/lab6omis/cache"/>

    <managementRESTService enabled="true"
                           bind="127.0.0.1:9998"
                           securityServiceLocation="http://localhost:9998/ehcache/security"/>

    <defaultCache
            maxEntriesLocalHeap="1000"
            eternal="false"
            timeToIdleSeconds="1800"
            timeToLiveSeconds="1800"
            diskSpoolBufferSizeMB="30"
            maxEntriesLocalDisk="10000"
            diskExpiryThreadIntervalSeconds="120"
            memoryStoreEvictionPolicy="LRU"
            clearOnFlush="true"
            statistics="true"
            copyOnRead="true"
            copyOnWrite="true">
        <persistence strategy="localTempSwap"/>
    </defaultCache>

    <cache name="by.losik.lab6omis.entities.general.types.Request"
           maxEntriesLocalHeap="500"
           eternal="false"
           timeToIdleSeconds="0"
           timeToLiveSeconds="3600"
           overflowToDisk="false"
           diskPersistent="true"
           memoryStoreEvictionPolicy="LRU"
           transactionalMode="off"
           statistics="true">
    </cache>

    <cache name="by.losik.lab6omis.entities.general.types.ResponseEntity"
           maxEntriesLocalHeap="500"
           eternal="false"
           timeToIdleSeconds="0"
           timeToLiveSeconds="3600"
           overflowToDisk="false"
           diskPersistent="true"
           memoryStoreEvictionPolicy="LRU"
           transactionalMode="off"
           statistics="true">
    </cache>

    <cache name="by.losik.lab6omis.entities.general.types.Solution"
           maxEntriesLocalHeap="500"
           eternal="false"
           timeToIdleSeconds="0"
           timeToLiveSeconds="3600"
           overflowToDisk="false"
           diskPersistent="true"
           memoryStoreEvictionPolicy="LRU"
           transactionalMode="off"
           statistics="true">
    </cache>

    <cache name="by.losik.lab6omis.entities.general.types.Sound"
           maxEntriesLocalHeap="200"
           eternal="false"
           timeToIdleSeconds="0"
           timeToLiveSeconds="7200"
           overflowToDisk="true"
           diskPersistent="true"
           maxEntriesLocalDisk="1000"
           diskSpoolBufferSizeMB="20"
           memoryStoreEvictionPolicy="LRU"
           transactionalMode="off"
           statistics="true">
    </cache>

    <cache name="by.losik.lab6omis.entities.general.types.Sensor"
           maxEntriesLocalHeap="100"
           eternal="false"
           timeToIdleSeconds="0"
           timeToLiveSeconds="7200"
           overflowToDisk="true"
           diskPersistent="true"
           maxEntriesLocalDisk="500"
           diskSpoolBufferSizeMB="20"
           memoryStoreEvictionPolicy="LRU"
           transactionalMode="off"
           statistics="true">
    </cache>

    <cache name="by.losik.lab6omis.entities.general.types.SensorData"
           maxEntriesLocalHeap="1000"
           eternal="false"
           timeToIdleSeconds="300"
           timeToLiveSeconds="300"
           overflowToDisk="false"
           diskPersistent="true"
           memoryStoreEvictionPolicy="LFU"
           transactionalMode="off"
           statistics="true"
           copyOnRead="false"
           copyOnWrite="false">
    </cache>

    <cache name="by.losik.lab6omis.entities.general.types.Sensor.sensorDataList"
           maxEntriesLocalHeap="50"
           eternal="false"
           timeToIdleSeconds="600"
           timeToLiveSeconds="600"
           overflowToDisk="false"
           diskPersistent="true"
           memoryStoreEvictionPolicy="LRU"
           transactionalMode="off"
           statistics="true">
    </cache>

    <cache name="org.hibernate.cache.internal.StandardQueryCache"
           maxEntriesLocalHeap="200"
           eternal="false"
           timeToIdleSeconds="900"
           timeToLiveSeconds="900"
           overflowToDisk="false"
           diskPersistent="false"
           memoryStoreEvictionPolicy="LRU"
           transactionalMode="off"
           statistics="true">
    </cache>

    <cache name="org.hibernate.cache.spi.UpdateTimestampsCache"
           maxEntriesLocalHeap="2000"
           eternal="true"
           overflowToDisk="true"
           diskPersistent="true"
           maxEntriesLocalDisk="10000"
           diskSpoolBufferSizeMB="50"
           memoryStoreEvictionPolicy="LRU"
           transactionalMode="off"
           statistics="true">
    </cache>

    <cache name="by.losik.lab6omis.entities.base.BaseEntity##NaturalId"
           maxEntriesLocalHeap="100"
           eternal="false"
           timeToIdleSeconds="1800"
           timeToLiveSeconds="1800"
           overflowToDisk="false"
           diskPersistent="false"
           memoryStoreEvictionPolicy="LRU"
           transactionalMode="off"
           statistics="true">
    </cache>

    <cache name="entity_cache"
           maxEntriesLocalHeap="5000"
           eternal="false"
           timeToIdleSeconds="3600"
           timeToLiveSeconds="3600"
           overflowToDisk="true"
           diskPersistent="true"
           maxEntriesLocalDisk="100000"
           diskSpoolBufferSizeMB="100"
           memoryStoreEvictionPolicy="LRU"
           transactionalMode="off"
           statistics="true">
    </cache>

    <cache name="collection_cache"
           maxEntriesLocalHeap="1000"
           eternal="false"
           timeToIdleSeconds="1800"
           timeToLiveSeconds="1800"
           overflowToDisk="true"
           diskPersistent="true"
           maxEntriesLocalDisk="5000"
           memoryStoreEvictionPolicy="LRU"
           transactionalMode="off"
           statistics="true">
    </cache>

</ehcache>